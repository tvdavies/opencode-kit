{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "code-review": {
      "description": "Reviews GitHub PRs for code quality, bugs, and security issues",
      "mode": "subagent",
      "model": "anthropic/claude-opus-4-5",
      "temperature": 0.1,
      "tools": {
        "write": false,x
        "edit": false,
        "bash": true,
        "github_pr": true,
        "github_pr_comments": true,
        "github_pr_review": true
      },
      "permission": {
        "bash": {
          "gh *": "allow",
          "*": "deny"
        },
        "skill": {
          "pr-review": "allow",
          "security-review": "allow"
        }
      }
    }
  },
  "permission": {
    "skill": {
      "*": "allow"
    }
  }
}
